<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<!-- PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} 
				- %msg%n" / -->
			<!-- PatternLayout pattern="[%d{yyyy-MM-dd HH:mm:ss.SSS}] log4j%X{context} 
				- %5p [%t] - %c{1}: %m%n" / -->
			<PatternLayout
				pattern="%d{yyyy-MM-dd HH:mm:ss.SSS}] service%X{context} - %5p [%t] --- %c{1}: %m%n" />

		</Console>
		<!-- <Socket name="socket" host="localhost" port="4560"> -->
		<!-- <SerializedLayout /> -->
		<!-- </Socket> -->
		<GELF name="gelfAppender" server="localhost" port="12201" protocol="UDP" />
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
<!-- 			<AppenderRef ref="gelfAppender" /> -->
		</Root>
	</Loggers>
</Configuration>